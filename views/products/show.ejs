<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>

    <div class="row">
                <div class="col-lg-6 mt-3">
                  <!-- displaying flash -->
                  

                    <div class="card shadow mx-auto" style="width: 18rem;">
                        <img src="<%=foundproduct.img%>" class="card-img-top" alt="...">
                        <div class="card-body">
                          <h2 class="card-title"><%= foundproduct.name %></h2>
                          <h5 class="card-title"><%= foundproduct.price %></h5>
                          <p class="card-text"><%= foundproduct.desc %></p>
                          <a href="#" class="btn btn-sm btn-secondary">Add to Cart</a>
                          <a href="/products/<%=foundproduct._id%>/edit" class="btn btn-sm btn-dark">Edit</a>
                          <a href="#" class="btn btn-sm btn-success">Buy</a>
                        </div>
                      </div>
                </div>
                <div class="col-lg-4">
                    <h1 class="display-5">Leave a Review</h1>
                    <form action="/products/<%=foundproduct._id%>/review" method="POST">
                      <div class="mb-3">
                        <fieldset class="starability-basic">
                          <legend>Rating:</legend>
                          <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                          <input type="radio" id="first-rate1" name="rating" value="1" />
                          <label for="first-rate1" title="Terrible">1 star</label>
                          <input type="radio" id="first-rate2" name="rating" value="2" />
                          <label for="first-rate2" title="Not good">2 stars</label>
                          <input type="radio" id="first-rate3" name="rating" value="3" />
                          <label for="first-rate3" title="Average">3 stars</label>
                          <input type="radio" id="first-rate4" name="rating" value="4" />
                          <label for="first-rate4" title="Very good">4 stars</label>
                          <input type="radio" id="first-rate5" name="rating" value="5" />
                          <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                      </div>
                      <div class="mb-3">
                        <label class="form-label" for="comment">Comment:</label>
                        <textarea class="form-control"  row="2" name="comment" id="comment"></textarea>
                      </div>
                      <button class="btn btn-sm btn-success">Add Review</button>
                    </form>
                    
                    <div class="my-3">
                        <% for(let review of foundproduct.reviews){ %>
                          
                            <div class="card mt-3">
                              <p class=" mt-2 mx-3"><i>
                                <% if(review.createdAt){ %>
                                    <%=review.createdAt.toDateString()%>
                                <%}%>
                                </i>
                              </p>
                              <div class="mx-3 starability-result" data-rating="<%= review.rating %>"></div>
                              <div class="card-body">
                                <p class="card-text"><i>Comment:</i> <%=review.comment%></p>
                                <a href="#" class="btn btn-primary">Delete</a>
                              </div>
                              

                            </div>
                        <%}%>
                    </div>

                </div>
    </div>
</body>
</html>